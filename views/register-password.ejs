<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
<main>
    <form class="account-form" action="/admin/register-password" method="POST">
        <%- include('includes/icon.ejs')%>

        <h5 style="text-align: center">Please choose a password</h5>
        <div class="form-control">
            <p class="dynamicMessage"> <%= dynamicMessage %></p>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password">
            <br>
            <label for="confirm_password">Confirm Password:</label>
            <input type="password" id="confirm_password" name="confirm_password">
            <br>
            <a class="btn btn-primary" href="/admin/register">Back</a><br>
            <button type="submit" class="btn btn-primary">Submit</button> <br>
            <a href="/">Already registered? Go to login page</a>
        </div>
    </form>
</main>
<%- include('includes/end.ejs') %>