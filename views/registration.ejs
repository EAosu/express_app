<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">


</head>

<body>
    <main>
        <form class="account-form" action="/admin/register" method="POST">
            <%- include('includes/icon.ejs') %>
            <h3 style="text-align: center">Please register</h3>
            <div class="form-control">
                <label for="email">Email</label>
                <input class="inputTypes" type="text" name="email" id="email" maxlength="32" required>
                <label for="firstname">First name</label>
                <input class="inputTypes" type="text" name="firstname" id="first-name" minlength="3" maxlength="32" required>
                <label for="lastname">Last name</label>
                <input class="inputTypes" type="text" value="" name="lastname" id="last-name" minlength="3" maxlength="32" required>

                <a href="/">Already registered? Go to login page</a>
            </div>
            <button type="submit" class="btn btn-primary" id="nextPage">Next</button><br>
        </form>
    </main>
<%- include('includes/end.ejs') %>