<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <main>
        <form class="account-form" action="/admin/register" method="POST">
            <%- include('includes/icon.ejs') %>
            <h3 style="text-align: center">Please register</h3>
            <div class="form-control">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" maxlength="32" required>
                <label for="first-name">First name</label>
                <input type="text" name="first-name" id="first-name" minlength="3" maxlength="32" required>
                <label for="last-name">Last name</label>
                <input type="text" name="last-name" id="last-name" minlength="3" maxlength="32" required>
                <a href="/admin/register-password" class="btn btn-primary">Submit</a><br>
                <a href="/">Already registered? Go to login page</a>
            </div>
        </form>
    </main>
<%- include('includes/end.ejs') %>