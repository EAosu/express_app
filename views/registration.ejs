<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <main>
        <form class="account-form" action="/admin/register" method="POST">
            <div class="form-control">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" maxlength="32" required>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" minlength="3" maxlength="32" required>
                <a href="/admin/register-password" class="btn btn-primary">Submit</a><br>
                <a href="/">Already registered? Go to login page</a>
            </div>
        </form>
    </main>
</body>
