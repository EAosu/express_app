<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
<main>
    <form class="account-form" action="/admin/register" method="POST">
        <div class="form-control">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" maxlength="32" required>
            <label for="password">Password</label>
            <input type="password" name="password" id="password" maxlength="32" required>
            <button type="submit" class="btn btn-primary">Sign in</button>
            <br>
            <a href="/admin/register">Need to register?</a>

        </div>
    </form>
</main>
</body>
